# üöÄ CICD360 Environment Configuration Template
# Copy this file to .env and update the values for your environment

# üåç Application Environment
ENVIRONMENT=production
APP_NAME=CICD360
PORT=8080
VERSION=1.0.0

# üîß Server Configuration
HOST=0.0.0.0
READ_TIMEOUT=15s
WRITE_TIMEOUT=15s
IDLE_TIMEOUT=60s

# üìä Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/cicd360/app.log

# üê≥ Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=mrbardia72/cicd360
DOCKER_TAG=latest

# üåê Nginx Configuration (if using reverse proxy)
NGINX_PORT=80
NGINX_SSL_PORT=443
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# üìà Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# üîí Security Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
MAX_REQUEST_SIZE=10MB
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# üöÄ Deployment Configuration
DEPLOY_DIR=/opt/cicd360
BACKUP_DIR=/opt/cicd360/backups
BACKUP_RETENTION_DAYS=7
DEPLOYMENT_TIMEOUT=300s

# üì° External Services (if needed)
# DATABASE_URL=postgres://user:password@localhost:5432/cicd360
# REDIS_URL=redis://localhost:6379/0
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# üîê SSL/TLS Configuration (for production)
# SSL_CERT_PATH=/etc/ssl/certs/cicd360.crt
# SSL_KEY_PATH=/etc/ssl/private/cicd360.key
# SSL_PROTOCOLS=TLSv1.2,TLSv1.3

# üåü Feature Flags
ENABLE_METRICS=true
ENABLE_DEBUG=false
ENABLE_CORS=true
ENABLE_REQUEST_LOGGING=true
ENABLE_HEALTH_CHECKS=true

# üì± Notification Configuration
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
# EMAIL_NOTIFICATIONS=true

# üîÑ CI/CD Configuration
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_REPOSITORY=mrbardia72/cicd360
DEPLOYMENT_BRANCH=main
AUTO_DEPLOY=true

# üñ•Ô∏è Server Configuration (for deployment)
SERVER_HOST=your-server-ip-or-domain
SERVER_USER=ubuntu
SERVER_PORT=22
SERVER_SSH_KEY_PATH=~/.ssh/id_rsa

# üéØ Performance Configuration
MAX_CONCURRENT_CONNECTIONS=1000
CONNECTION_TIMEOUT=30s
KEEPALIVE_TIMEOUT=65s
MAX_HEADER_SIZE=1MB

# üßπ Maintenance Configuration
AUTO_CLEANUP=true
CLEANUP_INTERVAL=24h
LOG_ROTATION=true
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=5
